<div class="row" id='recipe-selection'>
  <div class="col s6">
    <a href={{this.spoonacularUrl}} target='_blank'><h3>{{this.title}}</h3></a>
    <h3>{{this.servings}} servings</h3>
    <h4>Ready in: {{this.time}} minutes</h4>
    <br>

    {{#each ingredients}}
        {{this.originalString}}<br>
    {{/each}}
    <br>

    {{#each instructions}}
        {{this}}<br>
    {{/each}}
  </div>

    {{#if this.confirm}}
        <h3>{{this.confirm}}</h3>
    {{else}}
        <form class='save-result' method='POST' action='/save'>
            <input type="hidden" name='link' value={{this.recipeUrl}}>
            <button class='save-recipe' type='submit'>Save this Recipe!</button>
        </form>
    {{/if}}

</div>


